export RAKE_ANSIBLE_USE_VAGRANT=1
export {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_BOXNAME=ubuntu/trusty64 # name of the vagrant box to use for testing
export {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_PROVIDER=virtualbox     # name of the vagrant provider to use for testing
#export {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_ANSIBLE_TAGS=          # Multiple tags can be specified comma seperated
unset {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_ANSIBLE_TAGS             # An empty tags variable leads to an error
#export {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_ANSIBLE_SKIP_TAGS=     # Multiple tags can be specified comma seperated
unset {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_ANSIBLE_SKIP_TAGS        # An empty skip_tags variable leads to an error
export {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_ANSIBLE_VERBOSE=        # May contain one to four 'v's
export {{ role_prefix|upper }}_{{ role_name_nodash|upper }}_VAGRANT_ANSIBLE_CHECKMODE=      # 1 to enable, any other value to disable
